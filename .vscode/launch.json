{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Start Beacon Kit",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/beacond/cmd/main.go",
            "buildFlags": ["-tags='netgo,pebbledb,blst,bls12381,ckzg,cgo'"],
            "args": [
                "start",
                "--pruning=nothing",
                "--beacon-kit.logger.log-level", "info",
                "--api.enabled-unsafe-cors", 
                "--api.enable", 
                "--api.swagger", 
                "--minimum-gas-prices=0.0001abgt",
                "--home", "${workspaceFolder}/.tmp/beacond", 
                "--beacon-kit.engine.jwt-secret-path", "${workspaceFolder}/testing/files/jwt.hex",
                "--beacon-kit.block-store-service.enabled",
                "--beacon-kit.block-store-service.pruner-enabled",
                "--beacon-kit.node-api.enabled",
                "--beacon-kit.node-api.logging",
                "--beacon-kit.kzg.trusted-setup-path", "${workspaceFolder}/testing/files/kzg-trusted-setup.json",
            ],
            "env": {
                "CHAIN_SPEC": "devnet"
            },
            "console": "integratedTerminal"
        },
    ]
}
